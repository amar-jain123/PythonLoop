#calculate ,length of the string, by user
ama = input('enter the string')

print(len(ama))
# to count vowels in string
jai = input("enter the string: ")
vowels= 'AaEeIiOoUu'
lst = []
for i in jai:
    for j in vowels:
        if i == j:
            lst.append(i)
print(len(lst))

